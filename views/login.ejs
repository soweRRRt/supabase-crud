<%- include('partials/header', { title: "Вход", user }) %>

<div class="container mt-5" style="max-width: 500px;">
  <h2 class="text-center mb-4">Войти</h2>

  <form action="/login" method="POST" class="card p-4 shadow-sm">
    <div class="mb-3">
      <label for="email" class="form-label">Email:</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="Введите email" required>
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Пароль:</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Введите пароль" required>
    </div>

    <button type="submit" class="btn btn-primary w-100">Войти</button>

    <div class="text-center mt-3">
      <small>Нет аккаунта? <a href="/register">Зарегистрироваться</a></small>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
